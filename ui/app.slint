import { LineEdit, Palette, StyleMetrics } from "std-widgets.slint";
import { Settings, SettingsPage, Theme } from "settings.slint";

export { Settings, Theme } from "settings.slint";

enum Page {
    home,
    settings,
}

component HomePage {
    callback open-settings;

    width: 100%;
    height: 100%;

    Image {
        source: @image-url("icons/settings-symbolic.svg");
        colorize: Palette.control-foreground;
        x: parent.width - self.width - self.padding;
        y: self.padding;
        width: 40px;
        height: 40px;
        padding: StyleMetrics.layout-padding;

        TouchArea {
            clicked => {
                open-settings();
            }
        }
    }

    LineEdit {
        text: "";
        placeholder-text: "Enter RFID";
        width: 250px;
        height: 40px;
    }
}

export component App inherits Window {
    public function reload-theme() {
        if Settings.theme == Theme.dark {
            Palette.color-scheme = ColorScheme.dark;
        } else if Settings.theme == Theme.light {
            Palette.color-scheme = ColorScheme.light;
        } else {
            Palette.color-scheme = ColorScheme.unknown;
        }
    }

    in-out property <Page> currentPage: Page.home;

    title: "Youkoso";
    preferred-width: 800px;
    preferred-height: 600px;

    if currentPage == Page.home: HomePage {
        open-settings => {
            currentPage = Page.settings;
        }
    }

    if currentPage == Page.settings: SettingsPage {
        init => {
            self.focus();
        }

        close => {
            currentPage = Page.home;
        }
    }
}
