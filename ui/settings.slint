export enum Theme {
    system,
    dark,
    light,
}

export global Settings {
    callback update-settings;

    in-out property <Theme> theme;
}

export component SettingsPage {
    callback close;

    forward-focus: key-handler;
    key-handler := FocusScope {
        key-released(event) => {
            if event.text == Key.Escape {
                close();
                accept
            }
            reject
        }
    }
}
